<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "MyBlog", root_path, :class => "brand" %>
          <div class="nav-collapse collapse">
            <% if user_signed_in? %>
              <div class="navbar-form pull-right inline">                  
                <ul class="nav">
                  <li class="dropdown">    
                    <a href="#" class="dropdown-toggle navbar-link" data-toggle="dropdown">
                      <%= image_tag current_user.avatar.url(:thumb) , :width => "16px", :height => "16px" %>
                      <%= current_user.email %> <b class="icon-th-list icon-white"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                      <li><a href="#">Another action</a></li>
                      <li><a href="#">Something else here</a></li>
                      <li class="divider"></li>
                      <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
                    </ul>
                  </li>
                </ul>
                <a href="#" style="float: left;" class="btn btn-info"><b class = "icon-pencil"></b></a>  
              </div>
            <% else %>
              <%= form_for("user", :url => user_session_path, :html => { :class => "navbar-form pull-right" } ) do |f| %>        
                <%= f.email_field :email, :autofocus => true, :class => "span2", :placeholder => "Email" %>
                <%= f.password_field :password, :class => "span2", :placeholder => "Password" %>
                <%= f.submit "Sign in", :class => "btn btn-primary" %>
                <%= link_to "Sign Up &raquo;".html_safe, new_user_registration_path, :class => "btn btn-success" %>
              <% end %>
            <% end %>
            
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

<div class="container" style="padding: 60px;">    
<%= yield %>
</div>

</body>
</html>
